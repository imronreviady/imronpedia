<script>
	jQuery(document).ready(function($) {
        "use strict";
        
		var DOC_TERMSOFUSE   = $("div#documentation-termsofuse-page");
		var DOC_TERMSOFUSE_F = DOC_TERMSOFUSE.find('form#form');

        try{tinymce.remove();} catch(e) {/*pass*/}
        tinymce.init({
        	selector: 'textarea#documentation-termsofuse-content',
        	plugins: "autoresize",
        	force_br_newlines : false,
	        force_p_newlines : false,
	        forced_root_block : false
        });
        
        DOC_TERMSOFUSE_F.on('submit',function(event) {
            DOC_TERMSOFUSE_F.find('textarea').val(tinyMCE.activeEditor.getContent());
        });

        DOC_TERMSOFUSE_F.ajaxForm({
            url: '{{CONFIG url}}/req/admin/static_page',
            type: 'POST',
            dataType: 'json',
            data: {page: 'doc_terms'},
            beforeSend: function() {
                DOC_TERMSOFUSE_F.find('button[type="submit"]').attr('disabled', 'true');
                DOC_TERMSOFUSE_F.find('button[type="submit"]').find('span').text("{{TR Please wait}}!");
            },
            success: function(data) {
                if (data.message) {
                    $.notify({
                        message: data.message,
                    },{
                        allow_dismiss: false,icon_type: "class",type: 'default',timer: 500,
                        placement: {from: "bottom",align: "left"},
                        offset: {x: 40,y: 30},
                        animate: {enter: 'animated fadeInUp',exit: 'animated fadeOutDown'}
                    });
                }

                if (data.status == 200) {
                	delay(function(){
                		hs_redirect('{{LINK terms}}');
                	},2000);
                }
            }
        });
	});
</script>